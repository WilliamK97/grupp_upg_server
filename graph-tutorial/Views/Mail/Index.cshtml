@model Microsoft.Graph.Message[]

@{
    ViewBag.Title = "Index";
}

<h2>Dina Mail</h2>
@Html.ActionLink("Nytt Mail", "Create", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Läs Dina olästa mail", "UnreadMessages", null, new { @class = "btn btn-primary" })
<br />
<table class="table table-dark table-sm table-hover">
    <thead>
        <tr>
            <th scope="col">Subject</th>
            <th scope="col">Message</th>
            <th scope="col">Sender</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {           
            <tr onclick='readMail("@item.Id")'>
                <td>
                    @item.Subject
                </td>
                <td>
                    @item.BodyPreview
                </td>
                <td>@item.Sender.EmailAddress.Address</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>

            </tr>
        }
    </tbody>
</table>


<script>
    function readMail(id) {
        window.location.href = '@Url.Action("Details","Mail")/' + id
    }
</script>


