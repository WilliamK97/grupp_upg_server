
@{
    ViewBag.Title = "Test";
}

<h2>
    @if (!string.IsNullOrEmpty(ViewBag.Photo))
    {
        <img style="width: 7%;" src="data:image/png;base64,@ViewBag.Photo" />
    }
    Hi @ViewBag.Name
</h2>
<h4>@ViewBag.Mail</h4>

<hr />
<h2>Your Favourites colleagues</h2>
<ul class="list-group">
    @foreach (var item in ViewBag.Users)
    {
        <li class="list-group-item">@item.DisplayName  <span>@Html.ActionLink("Mail", "Create", "Mail", new { mail = item.Mail }, new { @class = "btn btn-primary float-right" })</span></li>

    }
</ul>

<hr />
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Person</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Bookings)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Description
                </td>

                <td>
                    @Html.ActionLink("Update", "Create", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })

                </td>

            </tr>
        }
    </tbody>
</table>



