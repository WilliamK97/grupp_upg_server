
@{
    ViewBag.Title = "Test";
}

<h2>Hi @ViewBag.Name</h2>
<h4>@ViewBag.Mail</h4>

@if (!string.IsNullOrEmpty(ViewBag.Photo))
{
    <img src="data:image/png;base64,@ViewBag.Photo" />
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Bookings)
        {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @Html.ActionLink("Update", "Create", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
 
            </td>
            
        </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })


